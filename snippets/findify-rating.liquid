{% assign value = value | plus: 0 %}
<div class="findify-rating-container">
  {% for i in (1..5) %}
    {%- assign unfilled = '' -%}
    {% if value < i %}
      {%- assign unfilled = 'true' -%}
    {% endif %}
    {% render 'findify-icon-star'
      , unfilled: unfilled %}
  {% endfor %}
  {% if count %}
    <span>({{ count }})</span>
  {% endif %}
</div>